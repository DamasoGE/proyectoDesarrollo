<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="150.0" prefWidth="300.0" spacing="20" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectoDesarrollo.controllers.ConfirmExitController">

    <!-- Mensaje de confirmaciÃ³n -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Do you want to exit?" />

    <!-- Botones -->
    <HBox alignment="CENTER" spacing="20">
        <children>
            <Button onAction="#confirmExit" prefWidth="80" text="Yes" />
            <Button onAction="#cancelExit" prefWidth="80" text="No" />
        </children>
    </HBox>

    <!-- Padding general -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

</VBox>
